<div class="ui segment">


  <div class="ui grid dividing large header">
    <div class="left floated column">
      Post
    </div>
    <div class="right floated right aligned column">
      <i class="ui teal envelope open outline icon"></i>
    </div>
  </div>

  <div class="ui centered grid">
    <br>
    <div class="ui card">
      <div class="content">
        <%= @post.content %>
        <div class="meta">Author: <%= @post.author.name %></div>
      </div>
    </div>
    <br>
  </div>

  <div class="ui centered dividing grid">
    <div><%= link_to 'Edit post', edit_post_path(@post) %></div>
    <div><%= link_to 'Post index', posts_index_path %></div>
    <div><%= link_to 'Users index', users_index_path %></div>
  </div>
  <br>
  <br>
  <div class="ui">

    <br/>
    <div class="ui segments">
      <div class="ui segment">
        <div class="ui grid large header">
          <div class="left floated column">
            Comments
          </div>
          <div class="right floated right aligned column">
            <i class="teal comments outline icon"></i>
          </div>
        </div>
      </div>
      <div class="ui segment">
        <%= render 'shared/comment_form' %>
      </div>
      <div class="ui segments">
        <% @post.comments.each do |comm| %>
          <div class="ui segment">
            <div class="ui grid">
              <div class="three wide column">
                <div class="ui horizontal list">
                  <div class="item">
                    <%= image_tag('profile.jpg', class: "ui avatar image") %>
                    <div class="content">
                      <div class="ui sub header"><%= "#{comm.commenter.name} #{comm.commenter.lastname}" %></div>

                      <small style="color: grey"><%= time_ago_in_words(comm.created_at, include_seconds: true).gsub('about', '') %></small>
                    </div>
                  </div>
                </div>
              </div>
              <div class="thirteen wide column">
                <div class="content">
                  <%= comm.content %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

