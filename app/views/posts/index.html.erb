<h2 class="ui center aligned icon header">
  <i class="circular teal folder open outline icon"></i>
  Posts index
</h2>


<div class="centered aligned">
  <% @posts.each do |post| %>
    <div class="ui raised segment">
      <div class="content">
        <span class="ui avatar image"><%= image_tag('profile.jpg') %></span> 
        <span><%= post.author.name %>  <%= post.author.lastname %></span>
        <span class="right aligned meta"><%= time_ago_in_words(post.created_at, include_seconds: true).gsub('about', '') %></span>
      </div>
      <div class="content">
        <%= post.content %>
        <br>
        <br>
      </div>
      <div class="content">
    <span class="right floated">
      <%= link_to create_like_path(post, from: 'index'), method: :post do %>
        <i class="heart teal like icon"></i>
      <% end %>
      <small class="meta"><%= post.likes.count %> likes</small>
    </span>
        <i class="comment teal outline icon"></i>
        <small class="meta"><%= post.comments.count %> comments</small>
      </div>
      <%= link_to post_path(post) do %>
        <div class="ui bottom attached button">
          <i class="envelope outline icon"></i>
          Open
        </div>
      <% end %>
    </div>
  <% end %>
  <% content_for :right_side do %>
  <div class="container">
  </div>
  <% end %>
  <% content_for :left_side do %>
    <div class="container">
      <%= render 'shared/links'%>
    </div>
  <% end %>
</div>


